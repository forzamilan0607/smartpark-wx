<style lang="less">
  .view {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 16px;
    background-color: #fff;
    padding: 10rpx;
    margin-top: 40rpx;
    padding-left: 30rpx;
  }
  .doorList {
    background-color: #fff;
    height: 60rpx;
    font-size: 14px;
    line-height: 60rpx;
    margin: 10rpx;
    padding: 0 20rpx;
    position: relative;
    switch {
      position: absolute;
      right: 20rpx;
    }
    .switch {
      position: absolute;
      right: 20rpx;
      background-color: #00479D;
      font-size: 12px;
      padding: 0 20rpx;
      text-align: center;
      border-radius: 10rpx;
      color: #fff;
      height: 40rpx;
      line-height: 40rpx;
      top: 10rpx;
    }
  }
</style>

<template>
  <view class="main">
    <view class="view" @tap="my">我的</view>
    <repeat for="{{privateDoorControllers}}" wx:if="{{private}}">
      <view class="doorList">{{item.doorName}} <text class="switch" @tap="open('{{item.doorId}}')">开门</text></view>
    </repeat>

    <view class="view" @tap="we">公共</view>
    <repeat for="{{publicDoorControllers}}" wx:if="{{public}}">
      <view class="doorList">{{item.doorName}} <text class="switch" @tap="open('{{item.doorId}}')">开门</text></view>
    </repeat>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import utilMixin from '../mixins/util'
  import toastMixin from '../mixins/toast'
  import api from '../mixins/api'

  export default class DoorController extends wepy.page {
    config = {
      navigationBarTitleText: '门控',
      navigationBarBackgroundColor: '#00479D',
      navigationBarTextStyle: 'white'
    }

    mixins = [api, toastMixin, utilMixin]

    data = {
      privateDoorControllers: [],
      publicDoorControllers: [],
      private: true,
      public: false
    }

    methods = {
      open (id) {
        console.log(id)
        let that = this
        const param = {
          openId: wepy.getStorageSync('openid'),
          doorId: id
        }
        that.openDoor(param).then(res => {
          console.log(res)
        })
      },

      my () {
        this.private = !this.private
        this.$apply()
      },

      we () {
        this.public = !this.public
        this.$apply()
      }
    }

    onLoad () {

    }

    onShow () {
      let that = this
      const openId = wepy.getStorageSync('openid')
      console.log(openId)
      that.getControllers(openId).then(res => {
        console.log(res)
        if (res.data.code === 200) {
          that.privateDoorControllers = res.data.privateDoorControllers
          that.publicDoorControllers = res.data.publicDoorControllers
          that.$apply()
        }
      })
    }
  }
</script>
